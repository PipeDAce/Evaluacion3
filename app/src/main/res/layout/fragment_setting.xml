<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vistas.SettingFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Patio trasero"
        android:textAppearance="@style/TextAppearance.Material3.DisplayLarge"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginHorizontal="50dp"
        android:textAlignment="center"
        />

    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="139dp"
        android:src="@drawable/ic_water" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/toggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="400dp"
        app:checkedButton="@id/btnEncendido"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:singleSelection="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnApagado"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Apagado"
            app:icon="@drawable/ic_add" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEncendido"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encendido"
            app:icon="@drawable/ic_add" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <TextView
        android:id="@+id/Tiempo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:padding="10dp"
        android:text="Tiempo: 00:04:00"
        android:textSize="30dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="460dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_time"/>

    <TextView
        android:id="@+id/Humedad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Humedad: 35%"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="520dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_humedad" />

</FrameLayout>
